.side-bar
  .side-bar__user
    %p
      =current_user.name
    =link_to edit_user_path(current_user), class: "side-bar__user__icon-cog" do
      =fa_icon "cog"
    =link_to new_group_path, class: "side-bar__user__icon-edit" do
      =fa_icon "edit"
  .side-bar__group
    - current_user.groups.each do |group|
      =link_to group_messages_path(group), class: "side-bar__group__name" do
        %h2=group.name
        .side-bar__group__message
          %p まだメッセージはありません
