- @messages.each do |message|
  .main__contents__content{ "data-message-id": "#{message.id}" }
    .main__contents__content__title
      = message.user.name
      %span= message.created_at.strftime("%Y/%m/%d %H:%M")
    .main__contents__content__body
      %p= message.content
      = image_tag message.image.to_s
