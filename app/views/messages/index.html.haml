= render 'shared/side_bar'
.main
  .main__header
    .main__header__group
      .main__header__group__name
        %h2= @group.name
      .main__header__group__member
      - if @group.users
        %p.main__header__group__member__title
          Member :
          - @group.users.each do |user|
            %span= user.name
      - else
        %p メンバーがいません
    =link_to edit_group_path(@group), class: "main__header__edit" do
      %p Edit
  .main__contents
    =render "message", item: @groups
  .main__footer
    =form_tag "#" do
      %input{type: "text", placeholder: "type a message", class: "main__footer__input-box"}
      .main__footer__image-icon
        %label.upload-label{for: "upload-icon"}
          =fa_icon "picture-o"
          %input{type: "file", id: "upload-icon"}
      %input.main__footer__send-button{type: "submit", value: "Send"}
