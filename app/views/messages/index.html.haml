.pop-up
  %p.pop-up__message チャットグループが作成されました
.side-bar
  .side-bar__user
    %p Hori
    =link_to edit_user_path(current_user), class: "side-bar__user__icon-cog" do
      =fa_icon "cog"
    =link_to "#", class: "side-bar__user__icon-edit" do
      =fa_icon "edit"
  .side-bar__group
    =render "group"
.main
  .main__header
    .main__header__group
      .main__header__group__name
        %h2 Group
      .main__header__group__member
        %p まだメンバーはいません
    =link_to "#", class: "main__header__edit" do
      %p Edit
  .main__contents
    =render "message"
  .main__footer
    =form_tag "#" do
      %input{type: "text", placeholder: "type a message", class: "main__footer__input-box"}
      .main__footer__image-icon
        %label.upload-label{for: "upload-icon"}
          =fa_icon "picture-o"
          %input{type: "file", id: "upload-icon"}
      %input.main__footer__send-button{type: "submit", value: "Send"}
